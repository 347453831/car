<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fengf.carrental.dao.MembersDao">
    <sql id="all_column">
        `members_id`,
        `members_name`,
        `members_sex`,
        `members_birthday`,
        `members_number`,
        `members_address`,
        `members_phone`
    </sql>
    <sql id="Base_Column_List">


                    members_id,
                    members_name,
                    members_sex,
                    members_birthday,
                    members_number,
                    members_address,
                    members_phone


    </sql>
    <resultMap id="BaseResultMap" type="com.fengf.carrental.entity.Members">
        <!--@Table members-->
        <result property="membersId" column="members_id" jdbcType="INTEGER"/>
        <result property="membersName" column="members_name" jdbcType="VARCHAR"/>
        <result property="membersSex" column="members_sex" jdbcType="INTEGER"/>
        <result property="membersBirthday" column="members_birthday" jdbcType="DATE"/>
        <result property="membersNumber" column="members_number" jdbcType="VARCHAR"/>
        <result property="membersAddress" column="members_address" jdbcType="VARCHAR"/>
        <result property="membersPhone" column="members_phone" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
        members_id, members_name, members_sex, members_birthday, members_number, members_address, members_phone
        from car.members
        where members_id = #{membersId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
        members_id, members_name, members_sex, members_birthday, members_number, members_address, members_phone
        from car.members
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        members_id, members_name, members_sex, members_birthday, members_number, members_address, members_phone
        from car.members
        <where>
            <if test="membersId != null">
                and members_id = #{membersId}
            </if>
            <if test="membersName != null and membersName != ''">
                and members_name = #{membersName}
            </if>
            <if test="membersSex != null">
                and members_sex = #{membersSex}
            </if>
            <if test="membersBirthday != null">
                and members_birthday = #{membersBirthday}
            </if>
            <if test="membersNumber != null and membersNumber != ''">
                and members_number = #{membersNumber}
            </if>
            <if test="membersAddress != null and membersAddress != ''">
                and members_address = #{membersAddress}
            </if>
            <if test="membersPhone != null and membersPhone != ''">
                and members_phone = #{membersPhone}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="membersId" useGeneratedKeys="true">
        insert into car.members(members_name, members_sex, members_birthday, members_number, members_address,
        members_phone)
        values (#{membersName}, #{membersSex}, #{membersBirthday}, #{membersNumber}, #{membersAddress}, #{membersPhone})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update car.members
        <set>
            <if test="membersName != null and membersName != ''">
                members_name = #{membersName},
            </if>
            <if test="membersSex != null">
                members_sex = #{membersSex},
            </if>
            <if test="membersBirthday != null">
                members_birthday = #{membersBirthday},
            </if>
            <if test="membersNumber != null and membersNumber != ''">
                members_number = #{membersNumber},
            </if>
            <if test="membersAddress != null and membersAddress != ''">
                members_address = #{membersAddress},
            </if>
            <if test="membersPhone != null and membersPhone != ''">
                members_phone = #{membersPhone},
            </if>
        </set>
        where members_id = #{membersId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from car.members where members_id = #{membersId}
    </delete>

    <!--auto generated by MybatisCodeHelper on 2020-10-13-->
    <select id="findAllByMembersName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from members
        where members_name=#{membersName,jdbcType=VARCHAR}
    </select>


</mapper>

